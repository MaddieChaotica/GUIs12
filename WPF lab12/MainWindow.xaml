<Window x:Class="WPF_lab12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_lab12"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="EquestrianFiction" Style="{StaticResource Cheese}"/>
        <Button Name="News" Content="Новости" FontSize="20" Grid.Row="1" Style="{StaticResource DaButton}" Click="News_Click"/>
        <Button Name="Imageboard" Content="Имэджбоард" FontSize="20" Grid.Row="2" Style="{StaticResource DaButton}" Click="Imageboard_Click"/>
        <Button Name="Forum" Content="Форум" FontSize="20" Grid.Row="3" Style="{StaticResource DaButton}" Click="Forum_Click"/>
    </Grid>
</Window>
